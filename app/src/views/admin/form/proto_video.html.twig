<div class="form-group">
    <div class="col-sm-4 col-md-3 col-lg-2">
        <img src="http://placehold.it/200x150" class="img-responsive">
    </div>
    <div class="col-sm-7 col-md-8 col-lg-9">
        <div class="form-group">
            <div class="col-sm-2">
                {{ form_label(form.title) }}
                {{ form_errors(form.title) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(form.title) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                {{ form_label(form.url) }}
                {{ form_errors(form.url) }}
            </div>
            <div class="col-sm-10">
                <div class="input-group">
                    {{ form_widget(form.url) }}
                    <span class="input-group-addon video-check"</span>
                </div>
            </div>
            
        </div>
    </div>
    <div class="col-sm-1">
        <a href="#" class="btn btn-default delete_video_form"><i class="fa fa-times"></i></a>
    </div>
</div>
{{ form_widget(form.view_status) }}
